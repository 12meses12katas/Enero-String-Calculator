def getPattern(string)
  pattern = /,|\n/
  if (string.start_with?("//"))
    pattern = string[/\/\/(.*)\n/,1]
  end
  return pattern
end

def getValid(num)
  raise 'Numbers must be positive' unless num >= 0
  if num < 1000
    return num
  end
end

def add (snumbers)
  return 0 unless snumbers != ""
  numbers = 0
  snumbers.split(getPattern(snumbers)).each do |num|
    numbers+=getValid(num.to_i)
  end
  return numbers
end
